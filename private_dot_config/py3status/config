# py3status configuration file.
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "bluetooth"
order += "battery all"
order += "memory"
order += "volume master"
order += "keyboard_layout"
order += "keyboard_locks"
order += "tztime local"
order += 'whoami'

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

bluetooth {
        format_adapter = "\?if=powered [\?color=good  {name}: [\?if=discovering SEEK|ON]] {format_device}/{device}|\?color=bad : OFF"
        format_device = "\?if=paired&color=connected {alias}"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%a %Y-%m-%d %H:%M:%S"
}

volume master {
        mixer = "Master"
        on_click 1 = "exec pavucontrol"
}

keyboard_locks {
        format = '[\?if=num_lock&color=good NUM|\?color=bad NUM]'
}

whoami {
        format = '{username}@{hostname}'
}
